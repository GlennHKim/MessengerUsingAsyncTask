<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.multicampus.anddbsample.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="Id :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your id"
                android:gravity="top|left"
                android:id="@+id/yourId"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="이름 :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="홍길동"
                android:gravity="top|left"
                android:id="@+id/yourName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="전화번호 :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="010-1234-1234"
                android:gravity="top|left"
                android:id="@+id/yourTelnum"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="주소 :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:hint="서울시 성북구 성북동 북산아파트 205동 1205호"
                android:gravity="top|left"
                android:id="@+id/yourAddress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="하고싶은말 :"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:hint="함 씨부리바라"
                android:gravity="top|left"
                android:id="@+id/yourDesc"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력"
            android:id="@+id/btnSubmit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목록"
            android:id="@+id/btnList"/>
    </LinearLayout>
</LinearLayout>
